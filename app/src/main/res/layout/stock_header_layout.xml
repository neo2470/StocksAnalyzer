<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <Button
        android:id="@+id/prev"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:background="@drawable/prev"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stockName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上证指数" />

        <TextView
            android:id="@+id/stockCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000001" />

    </LinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:background="@drawable/next"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TableRow>

            <TextView
                android:id="@+id/candlePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新 %f" />

            <TextView
                android:id="@+id/candleOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今开 %f"
                android:layout_marginLeft="@dimen/stock_header_space"/>

            <TextView
                android:id="@+id/candleHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高 %f"
                android:layout_marginLeft="@dimen/stock_header_space"/>

            <TextView
                android:id="@+id/candleVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成交量 %f"
                android:layout_marginLeft="@dimen/stock_header_space"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/candleIncrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="涨幅 %f" />

            <TextView
                android:id="@+id/candleTurnover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="换手 %f"
                android:layout_marginLeft="@dimen/stock_header_space"/>

            <TextView
                android:id="@+id/candleLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最低 %f"
                android:layout_marginLeft="@dimen/stock_header_space"/>

            <TextView
                android:id="@+id/candleMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成交额 %f"
                android:layout_marginLeft="@dimen/stock_header_space"/>

        </TableRow>
    </TableLayout>
</LinearLayout>